process {

    // TODO nf-core: Check the defaults for all processes
    cpus   = 1
    memory = 8.GB
    time   = 4.h

    errorStrategy = { 'fail' }

    // General settings:
    
    withLabel:process_single {
        cpus   = 1
        memory = { 2.GB * task.attempt }
        time   = { 4.h  * task.attempt }
    }
    withLabel:process_low {
        cpus   = { 8    * task.attempt }
        memory = { 30.GB * task.attempt }
        time   = { 4.h   * task.attempt }
    }
    withLabel:process_low_cpu {
        cpus   = { 4    * task.attempt }
        memory = { 6.GB * task.attempt }
        time   = { 6.h  * task.attempt }
    }
    withLabel:process_medium {
        cpus   = { 16    * task.attempt }
        memory = { 12.GB * task.attempt }
        time   = { 6.h   * task.attempt }
    }
    withLabel:process_high {
        cpus   = { 16    * task.attempt }
        memory = { 24.GB * task.attempt }
        time   = { 6.h   * task.attempt }
    }
    withLabel:process_highcpu {
        cpus   = { 32                    }
        memory = { 192.GB * task.attempt }
        time   = { 48.h   * task.attempt }
    }

    // Specific settings:

    withLabel:process_asteroid {
        cpus   = { 16                    }
        memory = { 128.GB * task.attempt }
        time   = { 48.h   * task.attempt }
    }

    withLabel:process_broccoli {
        cpus   = { 16    * task.attempt }
        memory = { 24.GB * task.attempt }
        time   = { 6.h   * task.attempt }
    }

    withLabel:process_broccoli_array {
        cpus   = { 4    * task.attempt }
        memory = { 8.GB * task.attempt }
        time   = { 4.h   * task.attempt }
        array = params.array_size
        errorStrategy = 'retry'
        maxRetries = 3
    }

    withLabel:process_diamond {
        cpus   = { 16    * task.attempt }
        memory = { 10.GB * task.attempt }
        time   = { 6.h   * task.attempt }
        array = params.array_size
        errorStrategy = 'retry'
        maxRetries = 3
    }
    withLabel:process_generax {
        cpus   = { 16    * task.attempt }
        memory = { 32.GB * task.attempt }
        time   = { 6.h   * task.attempt }
        array = params.array_size
        errorStrategy = 'retry'
        maxRetries = 3
    }
    withLabel:process_mafft {
        cpus   = { 12    * task.attempt }
        memory = { 24.GB * task.attempt }
        time   = { 6.h   * task.attempt }
        array = params.array_size
        errorStrategy = 'retry'
        maxRetries = 3
    }
    withLabel:process_witch {
        cpus   = { 16                   }
        memory = { 32.GB * task.attempt }
        time   = { 6.h   * task.attempt }
        array = params.array_size
        errorStrategy = 'retry'
        maxRetries = 3
    }
    withLabel:process_iqtree {
        cpus   = { 8    * task.attempt }
        memory = { 16.GB * task.attempt }
        time   = { 3.h * task.attempt }
        array = params.array_size
        errorStrategy = 'retry'
        maxRetries = 3
    }
    withLabel:process_fasttree {
        cpus   = { 16    * task.attempt }
        memory = { 32.GB * task.attempt }
        time   = { 3.h * task.attempt }
        array = params.array_size
        errorStrategy = 'retry'
        maxRetries = 3
    }
    withLabel:process_prefilter_search {
        cpus   = { 4    * task.attempt }
        memory = { 16.GB * task.attempt }
        time   = { 4.h   * task.attempt }
        array = params.array_size
        errorStrategy = 'retry'
        maxRetries = 3
    }
    withLabel:process_possvm {
        cpus   = { 4    * task.attempt }
        memory = { 16.GB * task.attempt }
        time   = { 4.h   * task.attempt }
        array = params.array_size
    }
    withLabel:process_long {
        time   = { 20.h * task.attempt }
    }
    withLabel:process_high_memory {
        memory = { 200.GB * task.attempt }
    }
    
}
