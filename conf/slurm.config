// conf/slurm.config

process {
    executor = 'slurm'
    cache = 'lenient'
    queue = 'genoa64'

    // Default
    clusterOptions = '--qos=normal'
    time   = 12.h

    // Specific resources
    withLabel: 'process_low' {
        clusterOptions = '--qos=shorter'
        time   = 3.h
    }

    withLabel: 'process_medium' {
        clusterOptions = '--qos=normal'
        time   = 12.h
    }

    withLabel: 'process_high' {
        clusterOptions = '--qos=long'
        time   = 1.d
    }
}

executor {
    name = 'slurm'
    queueSize = 100
    submitRateLimit = '1 sec'
}

// Container configurations
apptainer {
    enabled = true
    autoMounts = true
}

singularity {
    enabled = false
    autoMounts = false
}

docker {
    enabled = false
    userEmulation = false
}

conda {
    enabled = false
    useMamba = false
}

